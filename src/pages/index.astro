---
import Layout from '../layouts/Layout.astro';
import Rainbow from '../components/web3/Rainbow.tsx';
import StakePanel from '../components/StakePanel.svelte';
---
<Layout>
  <main class="container">
    <header class="hero">
      <div class="left">
        <h1>Potentials Staking</h1>
        <p>Connect, select NFTs, lock, and stake in one transaction.</p>
      </div>
      <div class="right">
        <Rainbow client:load />
      </div>
    </header>

    <section>
      <StakePanel client:load />
    </section>
  </main>
</Layout>
